<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
	<!-- Appenders --> 
	<Appenders> 
	<Console name="console" target="SYSTEM_OUT">
		<PatternLayout pattern="%-5p: %c - %m%n" />
	</Console> 
	</Appenders>
	
	 <!-- Application Loggers -->
	 <Loggers> 
	   	<Logger name="com.community" level="INFO" additivity="false">
	    	<AppenderRef ref="console" />
	    </Logger> 
	 </Loggers>
</Configuration>